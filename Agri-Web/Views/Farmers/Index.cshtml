@model IEnumerable<AgriWeb.Models.Farmer>

@{
    ViewData["Title"] = "Farmers";
}

<h2>Farmers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Contact Info</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td>@farmer.Name</td>
                <td>@farmer.ContactInfo</td>
                <td>
                    <a asp-action="ViewProducts" asp-route-id="@farmer.Id" class="btn btn-info">View Products</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-primary">Add New Farmer</a>
